@page
@using Northwind.EntityModels
@model Northwind.Web.Pages.SuppliersModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row">
  <h1 class="display-2">Suppliers</h1>
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>Proveedor</th>
        <th>Pais</th>
      </tr>
    </thead>
    <tbody>
      @if (Model.Suppliers is not null)
      {
        @foreach (Supplier s in Model.Suppliers)
        {
          <tr>
            <td>@s.CompanyName</td>
            <td>@s.Country</td>
          </tr>
        }
      }
    </tbody>
  </table>
</div>
<div class="row">
  <p>Ingrese los datos del nuevo proveedor:</p>
  <form method="post">
    <div class="form-group">
      <label for="CompanyName">Nombre de la compañía:</label>
      <input type="text" asp-for="Supplier!.CompanyName">
    </div>
    <div class="form-group">
      <label for="ContactName">Nombre de contacto:</label>
      <input type="text" asp-for="Supplier!.ContactName">
    </div>
    <div class="form-group">
      <label for="ContactTitle">Direccion:</label>
      <input type="text" asp-for="Supplier!.Address">
    </div>
    <input type="Submit" value="Crear">
  </form>
</div>  